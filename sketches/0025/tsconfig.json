{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",

    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
  },
  "include": ["src"]
}
